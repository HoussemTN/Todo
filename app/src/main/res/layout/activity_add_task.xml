<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:duplicateParentState="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_title">

    <EditText
        android:id="@+id/newTaskName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_newTaskName"
        android:background="@drawable/rounded_border_edit_text"
        android:ems="10"
        android:hint="@string/task_name"
        android:inputType="text" />

    <EditText
        android:id="@+id/newTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_newTaskDescription"
        android:layout_margin="@dimen/padding_title"
        android:background="@drawable/rounded_border_edit_text"
        android:ems="10"
        android:hint="@string/task_description"
        android:inputType="text" />

    <Button
        android:id="@+id/addNewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/padding_title"
        android:text="@string/btn_add" />
</LinearLayout>